<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head') %>
        <title>Add New Blog</title>
</head>

<body>
    <%- include('./partials/nav') %>
        <div class="container mt-4">
            <h1>
                <%= blog.title %>
            </h1>
            <img src="<%= blog.coverImageURL %>" alt="" class="py-3" width="300px">
            <p class="card-text">
                <%= blog.body %>
            </p>
        </div>

        <div class="container mt-4">
            <img src="<%= blog.createdBy.profileImageURL %>" width="50px" style="margin-right: 10px;">
            <b>
                <%= blog.createdBy.fullName %>
            </b>
        </div>

        <div class="container mt-3">
            <h1>comments (<%= comments.length %>)</h1>
            <% if (locals.user) { %>
                <form action="/blog/comment/<%= blog._id %>" method="post">
                    <div class="mb-3">
                        <input type="text" name="content" id="content" class="form-control" placeholder="Enter your Comment"/>
                    </div>
                    <button type="submit" class="btn btn-primary">Add</button>
                </form>
            <% } %>
            <div class="mt-3">
                <% comments.forEach(comment => { %>
                <div class="my-3">
                    <img src="<%= comment.createdBy.profileImageURL %>" width="50px" style="margin-right: 10px;">
                    <b>
                        <%= comment.createdBy.fullName %>
                    </b>:  <span><%= comment.content %></span>
                </div>
                <% }) %>
            </div>
        </div>
        <%- include('./partials/scripts') %>
</body>

</html>